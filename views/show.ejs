<h1>Detail Catatan</h1>
<div>
    <a href="/" class="btn btn-primary"><i class="fas fa-list-alt"></i> Semua Catatan</a>
</div>
<div class="card my-2">
    <div class="card-body">
        <h2>
            <%= note.title %>
        </h2>
        <p class="text-muted">
            <i class="fas fa-calendar-alt"></i> Dibuat : <%= tanggalIndo(note.created_at) %>
            <i class="ml-3 far fa-user"></i> Oleh : <%= note.user %>
        </p>
        <hr />
        <p class="my-4">
            <%= note.body %>
        </p>
        <hr />
        <a href="/<%= note.id %>?_method=DELETE" onclick="return confirm('Kamu yakin...??')" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Delete
        </a>
        <a href="/<%= note.id %>/edit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
    </div>
</div>