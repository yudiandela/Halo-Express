<h1>Catatan Express</h1>
<div>
    <a href="/create" class="btn btn-primary"><i class="fas fa-plus"></i> Tambah Catatan</a>
</div>
<% if ( notes && notes.length > 0 ) { %>
<% notes.forEach(function (note) { %>
<div class="card my-2">
    <div class="card-body">
        <h2>
            <a href="#">
                <%= note.title %>
            </a>
        </h2>
        <p class="text-muted">
            <i class="fas fa-calendar-alt"></i> Dibuat : <%= tanggalIndo(note.created_at) %>
            <i class="ml-3 far fa-user"></i> Oleh : <%= note.user %>
        </p>
        <hr />
        <p class="my-4">
            <%= note.body %>
        </p>
        <hr />
        <a href="#" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
        <a href="/<%= note.id %>/edit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
    </div>
</div>
<% }) %>
<% } else { %>
<div class="card my-2">
    <div class="card-body">
        <div>Belum ada catatan disini... <a href="#" class="btn btn-primary">Buat sebuah catatan</a></div>
    </div>
</div>
<% } %>