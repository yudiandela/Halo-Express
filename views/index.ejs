<h1>Catatan Express</h1>
<div>
    <a href="/create" class="btn btn-primary"><i class="fas fa-plus"></i> Tambah Catatan</a>
    <div class="float-right">
        <a href="/user/login" class="btn btn-success"><i class="fas fa-user"></i> Login Akun</a>
        <a href="/user/register" class="btn btn-info"><i class="fas fa-user-plus"></i> Tambah Akun</a>
    </div>
</div>
<% if ( notes && notes.length > 0 ) { %>
<% notes.forEach(function (note) { %>
<div class="card my-2">
    <div class="card-body">
        <h2>
            <a class="text-primary" href="/<%= note.id %>">
                <%= note.title %>
            </a>
        </h2>
        <p class="text-muted">
            <i class="fas fa-calendar-alt"></i> Dibuat : <%= tanggalIndo(note.created_at) %>
            <i class="ml-3 far fa-user"></i> Oleh : <%= note.user %>
        </p>
        <hr />
        <p class="my-4">
            <%= note.body %>
        </p>
        <hr />
        <form class="d-inline" method="POST" action="/<%= note.id %>?_method=DELETE">
            <button class="btn btn-danger" name="remove" onclick="return confirm('Kamu yakin...??')">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
        </form>
        <a href="/<%= note.id %>/edit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i> Edit</a>
    </div>
</div>
<% }) %>
<% } else { %>
<div class="card my-2">
    <div class="card-body">
        <div>Belum ada catatan...</div>
    </div>
</div>
<% } %>